{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types",
      "src/typings"
    ],
    "lib": [
      "es2016",
      "dom",
      "es6"
    ]
  },
  "exclude": [
    "src/models/api-models/index.ts",
    "**/intervey-api/**/*.*"
  ]
}
