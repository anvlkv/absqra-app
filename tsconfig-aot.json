{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es6",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true
  },
  "files": [
    "client/imports/app/app.module.ts",
    "client/main.ts"
  ],
  "compileOnSave": false,
  "angularCompilerOptions": {
    "genDir": "client/imports/aot",
    "skipMetadataEmit": true
  }
}
